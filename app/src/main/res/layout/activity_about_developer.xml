<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.journaldev.loginphpmysql.aboutDeveloper">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="236dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="@drawable/photo"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:backgroundTint="@android:color/holo_green_light"
        android:padding="30dp"
        android:text="Hi, i am an aspiring Android Developer currently completing my B.Tech. at SRM, Chennai. If you like the application do share it and check out my profile. Thanks !."
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_above="@+id/buttonLinkedin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp" />


    <Button
        android:id="@+id/buttonLinkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonGithub"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="buttonLinkedin"
        android:text="Linkedin"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/buttonGithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonGoogle"
        android:layout_alignBottom="@+id/buttonGoogle"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="buttonGithub"
        android:text="github"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/buttonGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="buttonGoogle"
        android:text="google+"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="474dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:text="Rishabh Modi"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />


</RelativeLayout>
